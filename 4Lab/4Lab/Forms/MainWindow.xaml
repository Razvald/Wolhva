<Window x:Class="_4Lab.Forms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4Lab"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Content="Материалы" Click="BtnMaterials_Click" Margin="10"/>
        <Button Content="Продукты" Click="BtnProducts_Click" Margin="10" Grid.Column="1"/>

        <Button Content="Материалы control" Click="BtnMaterialsControl_Click" Margin="10" Grid.Row="1"/>
        <Button Content="Продукты control" Click="BtnProductsControl_Click" Margin="10" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Window>
